@import url('http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css')

global-reset()
reset-html5()

// Defaults
font-main = sans-serif
height = 26px

html, body
	font: 14px font-main
	background: #000
	cursor: default
	-webkit-user-select: none
	text-shadow: 0 1px 0 rgba(#000, .8)
	overflow: hidden

#statusline-bg
	width = 1920px
	height = height
	blur = 2px

	position: absolute
	background: url("/home/kim/bg.jpg") blur blur

	top: -(blur)
	left: -(blur)

	width: width + (blur * 2)
	height: height + (blur * 4)
	-webkit-filter: blur(blur) grayscale(100%)

	z-index: 10

	&:after
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		content: ''
		background: linear-gradient(top, rgba(#000, .4), rgba(#000, .8))

#statusline
	position: relative
	z-index: 11

	height: height - 1px
	line-height: height
	//background: linear-gradient(top, #444, #222)
	color: #fff

	border-bottom: 1px solid rgba(#000, .5)

	div, ul, li
		display: inline-block

	#left
		float: left
		& > div:not(:first-child),
		& > ul:not(:first-child)
			margin: 0 0 0 10px

	#right
		float: right
		& > div:not(:last-child),
		& > ul:not(:last-child)
			margin: 0 10px 0 0

	#tags
		li
			padding: 0 10px
			line-height: height - 2px
			margin: 1px
			border-radius: 3px
			cursor: pointer
			position: relative

			&:hover
				background: rgba(#fff, .1)

			&.selected
				background: rgba(#fff, .2)
				color: #fff
				text-shadow: 0 -1px 0 #000
				font-weight: bold

			.windows
				position: absolute
				content: ' '
				width: 4px
				height: 4px
				border-radius: 1px
				background: rgba(#fff, .5)
				top: 2px
				right: 2px
	#date
		color: #eee
		i
			opacity: .8
			margin: 0 5px 0 0

	#time
		font-weight: bold
		margin: 0 10px 0 0
		i
			opacity: .8
			margin: 0 5px 0 0

	#notification
		li
			border-radius: 2px
			margin: 0 0 0 5px
			padding: 0 7px
			font-size: 12px
			font-weight: bold
			height: height - 4px
			cursor: pointer
			line-height: height - 2px
			.icon
				margin: 0 5px 0 0
			.close
				opacity: .5
				margin: 0 0 0 5px
			&.error
				col = rgba(#d32)
				background: linear-gradient(top, col, darken(col, 10))
			&.warn
				col = rgba(#e92)
				background: linear-gradient(top, col, darken(col, 10))
			&:hover
				.close
					opacity: 1

	#volume
		i
			opacity: .8
			margin: 0 0 0 5px
		.progress
			background: linear-gradient(top, rgba(#000, .5), rgba(#000, 0))
			box-shadow: inset 0 1px 1px #000, inset 0 -1px 1px rgba(#fff, .4)
			border-radius: 5px
			width: 100px
			height: 14px
			position: relative
			top: 2px
			margin: 0 0 0 5px
			.bar
				height: 10px
				border-radius: 5px
				col = #aaa
				background: linear-gradient(top, col, darken(col, 20))
				position: absolute
				top: 2px
				left: 2px
				box-shadow: inset 0 1px 1px lighten(col, 10), inset 0 -1px 1px darken(col, 20)
