!!!5
html(ng-app='Wkline')
	head
		meta(charset='utf-8')
		meta(http-equiv='Content-Type', content='text/html;charset=utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width,initial-scale=1.0')

		title Statusline

		link(rel='stylesheet', href='static/css/main.css', type='text/css')

	body
		#statusline-bg
		#statusline(ng-controller='WklineCtrl')
			#left
				ul#tags
					li 1
					li.selected 2
					li
						| 3
						span.windows

				div(ng-bind='data.placeholder') Waiting for page to load...

			#right
				ul#notification
					li.warn
						i.fa.fa-exclamation-triangle.icon
						| Warning notification
						i.fa.fa-times.close
					li.error
						i.fa.fa-times-circle.icon
						| Error notification
						i.fa.fa-times.close

				#player
					i.fa.fa-fast-backward
					i.fa.fa-pause
					i.fa.fa-fast-forward
					.time
						span.current 2:20
						span.end 4:40
					.progress
						.bar(style='width:50%')
					.song
						span.artist Artist
						span.title Very long trimmed title

				#volume
					i.fa.fa-volume-down
					.progress
						.bar(style='width:50%')
				#date
					i.fa.fa-calendar
					| 2014-02-20
				#time
					i.fa.fa-clock-o
					| 19:55

	script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.min.js')
	script(src='static/js/main.js')
